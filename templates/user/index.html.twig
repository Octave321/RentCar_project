{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block stylesheets %} 
{{ parent() }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .li_login{display:none}
    .li_register{display:none}
    .btn_logout{position:absolute; top:20px; right:20px}
    .logo_audi{height:30px}
    .logo_mercedes{height:30px}
    .logo_bmw{height:30px}
    .carousel{width:300px}
</style>
{% endblock %}

{% block body %}


<div class="example-wrapper">
<a class="btn_logout" href="{{ path('app_logout') }}">Logout</a>
<P>Profil</p>
<p>Bienvenu {{ app.user.Name }}</p>
 
<li> <a href="{{ path('offre') }}">Offres</a></li>       
<li> <a href="{{ path('formule') }}">Formules</a></li>     

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="./asset/img/logo_audi.png" class="logo_audi" 
    </div>
    <div class="carousel-item">
      <img src="./asset/img/logo_mercedes.png" class="logo_mercedes"
    </div>
    <div class="carousel-item">
      <img src="./asset/img/logo_bmw.png" class="logo_bmw" 
    </div> 
  </div>

 
  <div class="add_comment">
      <h1>Create new BlogPost</h1>

      
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

    
</div>
{% endblock %}
