{% extends 'base.html.twig' %}

{% block title %}Hello ModelsController!{% endblock %}

{% block stylesheets %}
{{ parent() }}

<style>
    .example-wrapper {  font: 18px/1.5 sans-serif; }
    .carousel-inner img{ height:75vh;}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .grid_r8{display:flex; justify-content:space-between}
    .item1_r8{margin-left:100px; margin-right:50px;}
    .item2_r8{margin-left:50px; margin-right:100px}
    .grid_caracteristiques{display:flex}
    .grid_tarifs{display:flex}
    .grid_conditions{display:flex}
    .grid_btn_car{display:flex; justify-content:space-around}
    ul{list-style:none}
    .form{display:none}
</style>
{% endblock %}

{% block body %}
<div class="example-wrapper">
    <p>R8</p>

    <div class="grid_r8">
        <div class="item1_r8">

            <p class="btn_caracteristiques">Caractéristiques</p>
                <div class="grid_caracteristiques">
                    <div class="item_caracteristiques">
                        <ul>
                            <li>Type</li>
                            <li>Place</li>
                            <li>Puissance</li>
                            <li>Transmission</li>
                        </ul>
                    </div>

                    <div class="item_caracteristiques">
                        <ul>
                            <li>Coupé</li>
                            <li>2</li>
                            <li>550ch</li>
                            <li>4 roue</li>
                        </ul>
                    </div>
                </div>

            <p class="btn_tarif">Tarifs</p>
                <div class="grid_tarifs">
                    <div class="item_tarifs">
                        <ul>
                            <li>Jour(200km)</li>
                            <li>3jours(600km)</li>
                            <li>7jours(1400km)</li>
                            <li>1mois(3000km)</li>
                            <li>KM supplémentaires</li>
                        </ul>
                    </div>

                    <div class="item_tarifs">
                        <ul>
                            <li>1500€</li>
                            <li>3500€</li>
                            <li>7500€</li>
                            <li>Sur devis</li>
                            <li>10€</li>
                        </ul>
                    </div>
                </div>

            <p class="btn_conditions">Conditions</p>
                <div class="grid_conditions">
                    <div class="item_conditions">
                        <ul>
                            <li>Âge minimum</li>
                            <li>Permis</li>
                            <li>Franchise haute</li>
                            <li>Rachat de franchise</li>
                            <li>Franchise réduite</li>
                        </ul>
                    </div>

                    <div class="item_conditions">
                        <ul>
                            <li>+25 ans</li>
                            <li>3ans</li>
                            <li>18000€</li>
                            <li>140€/jour</li>
                            <li>10800€</li>
                        </ul>
                    </div>
                </div>

        </div>        

        <div class="item2_r8">

            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ asset('build/img1_r8.jpg') }}" alt="First slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('build/img2_r8.jpg') }}" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('build/img3_r8.jpg') }}" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            
            <div class="grid_btn_car">
                <div class="item_btn_car">
                    <a class="btn_specifications" href="">Spécifications</a>
                </div>
                <div class="item_btn_car">
                    <a class="btn_contact" href="">Nous contacter</a>
                </div>
            </div>

            <div class="specifications">
                <h3>Audi R8</h3>
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <td>Moteur</td>
                                <td></td>
                                <td></td>
                                <td>v10</td>
                            </tr>
                            <tr>
                                <td>Transmission</td>
                                <td></td>
                                <td></td>
                                <td>4 roue</td>
                            </tr>
                            <tr>
                                <td>Puissance</td>
                                <td></td>
                                <td></td>
                                <td>550ch</td>
                            </tr>
                            <tr>
                                <td>0 à 100</td>
                                <td></td>
                                <td></td>
                                <td>3sec</td>
                            </tr>
                            <tr>
                                <td>Vitesse max</td>
                                <td></td>
                                <td></td>
                                <td>320km/h</td>
                            </tr>
                            <tr>
                                <td>Type</td>
                                <td></td>
                                <td></td>
                                <td>Coupe</td>
                            </tr>
                        </tbody>
                    </table>
            </div>

            <div class="form">
                <form>
                    <div>
                        <input type="radio" id="reserve"
                        name="contact" value="reserve">
                        <label for="reserve">Réserve</label>

                        <input type="radio" id="devis"
                        name="contact" value="devis">
                        <label for="devis">Devis</label>
                    </div>

                    <p>Informations personnelles</p>

                    <input type="text" placeholder="Firstname">
                    <input type="text" placeholder="Lastname"><br>
                    <input type="text" placeholder="Phone">
                    <input type="text" placeholder="Email"><br>

                    <p>Demande</p>
                    <input type="text" ><br>

                    <p>Date de départ</p>
                        <div class="form-group row">
                            <label for="example-date-input" class="col-0 col-form-label"></label>
                            <div class="col-10">
                                <input class="form-control" type="date" value="2011-08-19" id="example-date-input">
                            </div>
                        </div>

                    <p>Date de retour</p>
                        <div class="form-group row">
                            <label for="example-date-input" class="col-0 col-form-label"></label>
                            <div class="col-10">
                                <input class="form-control" type="date" value="2011-08-19" id="example-date-input">
                            </div>
                        </div>

                    <p>Commentaires</p>
                    <input type="text" placeholder="Commentaires">

                    <div>
                        <button type="submit">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
